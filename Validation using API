<body>
    <p>Enter a number and click ok</p>
    <input id ="id1" type="number" min="10000000" max="121434254632" required>
    <button onclick="myfunction()"> Ok
        
    </button>
    <p>If the no is less than 100 or greater than 300;An error message will be displayed</p>
    <p id = "result"></p>
    <script>
        function myfunction() {
            var x = document.getElementById("id1") 
            if  (!x.checkValidity()) {
                document.getElementById("result").innerHTML= x.validationMessage

            }
            else {
                document.getElementById("result").innerHTML = "inputok"
        }
    }
    </script>
