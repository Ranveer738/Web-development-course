<body>
    <h1>Promise in JS</h1>
    <h2 id = "a"></h2>
    <script>
        function display (Some)
        { 
            document.getElementById("a").innerHTML = Some
        }
        function Sum (a,b) 
    {
        var as = a+b
        display(as)
    }
    let mypromise = new Promise(function(resolve, reject) {
        let x = 0
        if (x==0) {
            resolve("ok")
        }
        else (reject("error"))
    })
    mypromise.then(
        function (value){Sum(5 , 5)},
          function (error) { Sum(error) }
    )
    </script>
</body>
