            margin: 0 0 18px;
            color: var(--muted);
        }

        input {
            padding: 10px;
            border-radius: 8px;
            border: none;
            font-size: 16px;
            width: 120px;
            text-align: center;
            margin-right: 10px;
        }

        button {
            appearance: none;
            cursor: pointer;
            border: none;
            border-radius: 8px;
