<body>
    <div class="container">
        <h1>Class Demo</h1>
        <button id="showData">Show Class Data</button>
        <div id="output"></div>
    </div>
    <script>
        class Person {
            constructor(name, age) {
                this.name = name;
                this.age = age;
            }
            greet() {
                return `Hello, my name is ${this.name} and I am ${this.age} years old.`;
            }
            static species() {
                return "Homo sapiens";
            }
        }
        class Student extends Person {
            constructor(name, age, grade) {
                super(name, age);
                this.grade = grade;
            }
            study() {
                return `${this.name} is studying in grade ${this.grade}.`;
            }
        }
        document.getElementById("showData").addEventListener("click", function () {
            const student1 = new Student("Alice", 16, 10);
            const outputDiv = document.getElementById("output");
            document.getElementById("boxOutput").innerHTML =
    "<p>" + student1.greet() + "</p>" +
    "<p>" + student1.study() + "</p>" +
    "<p>Species (Static Method): " + Person.species() + "</p>";
        });
    </script>
</body>
