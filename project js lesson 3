<body>

    <div class="container">
        <h2>JS Project: Random Values & Date</h2>
        <button onclick="generateRandomSet()">Generate Random Set</button>
        <div class="output" id="result"></div>
    </div>

    <script>
        function generateRandomSet() {
            let resultText = "";
            const date = new Date();
            resultText += `<strong>Current Date:</strong> ${date.toDateString()}<br>`;
            resultText += `<strong>Random Numbers:</strong> `;
            for (let i = 0; i < 5; i++) {
                resultText += Math.floor(Math.random() * 100) + " ";
            }
            resultText += "<br>";
            const rawRandom = Math.random() * 10;
            const rounded = Math.round(rawRandom);
            resultText += `<strong>Rounded Random Number (0â€“10):</strong> ${rounded}`;
            document.getElementById("result").innerHTML = resultText;
        }
    </script>

