    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Java Script Array Sorting</h1>
    <p>Click the button to sort the array in ascending/descending order:</p>
    <button onclick="ascending()">ascending</button>
    <button onclick="descending()">descending</button>
    <h2 id ="a"></h2>
    <h2 id ="b"></h2>
    <script>
        let arr = [5, 3, 8, 1, 2];
        document.getElementById("a").innerHTML = arr;

        function ascending() {
            arr.sort(function(a, b) {
                return a - b;
            });
            document.getElementById("a").innerHTML = arr;
        }
        function descending() {
            arr.sort(function(a, b) {
                return b - a;
            });
            document.getElementById("a").innerHTML = arr;
        }
        let arr2 = ["ranveer", "singh", "palak" , "sharma", "kumar"];
        arr2.sort();
        document.getElementById("b").innerHTML = arr2;

        </script>
</body>
</html>
