<body>
    <h1>Project: Sum of Arguments</h1>
    <h2 id="example">Example</h2>
    <script>
        function sumOfArguments() {
            var sum = 0;
            for (var i = 0; i < arguments.length; i++) {
                sum += arguments[i];
            }
            return sum;
        }
        document.getElementById("example").innerHTML =
            "The sum of the arguments is: " + sumOfArguments(5, 10, 1500000000, 208764, 1000000000);
    </script>
