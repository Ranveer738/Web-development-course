<body>
  <h1>JavaScript Array Mapping & Sorting</h1>
  <p>Click a button to sort the mapped array:</p>

  <button onclick="ascending()">Ascending</button>
  <button onclick="descending()">Descending</button>

  <h2 id="x"></h2>
  <h2 id="y"></h2>

  <script>
    let arr = [5, 10, 15, 20];

    // mapping using normal function
    let mappedArr = arr.map(function(num) {
      return num * 2;
    });

    document.getElementById("x").innerHTML = "Original Array: " + arr;
    document.getElementById("y").innerHTML = "Mapped Array (x2): " + mappedArr;

    function ascending() {
      let asc = [].concat(mappedArr).sort(function(a, b) {
        return a - b;
      });
      document.getElementById("y").innerHTML = "Ascending Order: " + asc;
    }

    function descending() {
      let desc = [].concat(mappedArr).sort(function(a, b) {
        return b - a;
      });
      document.getElementById("y").innerHTML = "Descending Order: " + desc;
    }
  </script>
</body>
