<body>
    <h1>JS Project </h1>
    <div id="output"></div>

    <script>
        var student = {
            name: "Riya",
            age: 8,
            grade: 3,
            color: "Pink"
        };

        var studentInfo = "Name: " + student.name + "<br>" +
            "Age: " + student["age"] + "<br>" +
            "Grade: " + student.grade + "<br>" +
            "Favorite Color: " + student.color;

        var fruits = ["Apple", "Mango", "Banana", "Jackfruit"];

        var fruitInfo = "First Fruit: " + fruits[0] + "<br>" +
            "Second Fruit: " + fruits[1] + "<br>";

        var joinedFruits = "All Fruits: " + fruits.join(" * ") + "<br>";
        var poppedFruit = "Popped Fruit: " + fruits.pop();

        document.getElementById("output").innerHTML =
            "<h3>Student Info:</h3>" + studentInfo + "<br><br>" +
            "<h3>Fruit Info:</h3>" + fruitInfo + joinedFruits + poppedFruit;
    </script>
</body>

