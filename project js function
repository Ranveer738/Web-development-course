<body>

    <div class="container">
        <h1>JS Function</h1>
        <button onclick="add(10, 5)">Addition</button>
        <button onclick="subtract(10, 5)">Subtraction</button>
        <button onclick="multiply(10, 5)">Multiplication</button>
        <button onclick="divide(10, 5)">Division</button>
    </div>

    <script>

        function add(x, y) {
            document.write("Addition: " + (x + y));
        }

        function subtract(x, y) {
            document.write("Subtraction: " + (x - y));
        }

        function multiply(x, y) {
            document.write("Multiplication: " + (x * y));
        }

        function divide(x, y) {
            document.write("Division: " + (x / y));
        }
    </script>

