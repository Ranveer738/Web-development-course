<body>
    <h1>Wait for itâ€¦ The Magical Math Machine</h1>
    <p>Click the button below to perform a magical math operation using async & await!</p>
    <button id="mathButton">Start Magic</button>
    <p id="result"></p>

    <script>
        async function magicalMathOperation() {
            const delay = ms => new Promise(resolve => setTimeout(resolve, ms));
            await delay(2000); 
            return Math.random() * 100; 
        }

        document.getElementById('mathButton').addEventListener('click', async () => {
            const resultElement = document.getElementById('result');
            resultElement.textContent = "Calculating...";
            const result = await magicalMathOperation();
            resultElement.textContent = `The magical result is: ${result .toFixed(2)}`;
        });
    </script>
    
