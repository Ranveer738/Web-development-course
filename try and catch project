<body>
    <div class="container">
        <h1>Try and Catch with User Input</h1>
        <p id="result"></p>
    </div>
    <form id="inputForm">
        <label for="userInput">Enter a number:</label>
        <input type="text" id="userInput" name="userInput">
        <button type="button" onclick="processInput()">Submit</button>
    </form>
    
    <script>
        function processInput() {
            try {
                let a = document.getElementById("userInput").value;

                if(isNaN(a)) {
                    throw "This is not a number!";
                }
                else if (a > 100) {
                    throw "The number is too high!";
                }
                else if (a < 0) {
                    throw "The number is too low!";
                }
                else {
                    document.write("You have entered: " + a);
                }
            }
            catch (err) {
                document.write("Error: " + err);
            }
        }
    </script>
                
